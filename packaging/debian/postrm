#!/bin/bash
#
# LinuxStudio Post-Removal Script
#

set -e

case "$1" in
    purge)
        echo "ðŸ—‘ï¸  Purging LinuxStudio data..."
        
        # åˆ é™¤é…ç½®æ–‡ä»¶
        rm -rf /etc/linuxstudio
        
        # åˆ é™¤æ•°æ®ç›®å½•
        rm -rf /opt/linuxstudio
        
        # åˆ é™¤æ—¥å¿—
        rm -rf /var/log/linuxstudio
        
        # åˆ é™¤ç¬¦å·é“¾æŽ¥
        rm -f /usr/bin/linuxstudio
        
        echo "âœ… LinuxStudio completely removed."
        ;;
        
    remove)
        echo "ðŸ—‘ï¸  LinuxStudio removed (configuration preserved)."
        echo "   To completely remove, use: sudo apt-get purge linuxstudio"
        
        # åˆ é™¤ç¬¦å·é“¾æŽ¥
        rm -f /usr/bin/linuxstudio
        ;;
        
    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
        
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0

